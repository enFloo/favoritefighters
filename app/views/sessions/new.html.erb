<h1 class="center"> Log In </h1>

<div class="form">
<%= form_tag sessions_path do %>

  <div class="border2">

    <div class="field mb-3">
      <%= label_tag :email %> <br>
      <%= text_field_tag :email, params[:email] %>
    </div>

    <div class="field mb-3">
      <%= label_tag :password %> <br>
      <%= password_field_tag :password %>
    </div>

    <div class="actions">
      <%= submit_tag "Log In" %>
    </div>

  </div>
<% end %>
</div>
